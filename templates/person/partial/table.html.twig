<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Race</th>
            <th>Sex</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {% for person in people %}
            <tr>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person }}
                    </a>
                </td>
                <td>
                    {{ person.race }}
                </td>
                <td>
                    {{ person.sex }}
                </td>
                <td>
                    {{ person.statuses|join('; ') }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
