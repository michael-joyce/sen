<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Alias</th>
            <th>Native</th>
            <th>Occupation</th>
            <th>Sex</th>
            <th>Birth Date</th>
            <th>Written Birth Date</th>
            <th>Birth Status</th>
            <th>Status</th>

        </tr>
    </thead>
    <tbody>
        {% for person in people %}
            <tr>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person.id }}
                    </a>
                </td>
                <td>
                    {{ person.firstName }}
                </td>

                <td>
                    {{ person.lastName }}
                </td>

                <td>{% if person.alias %}{{ person.alias|join(', ') }}{% endif %}</td>

                <td>
                    {{ person.native }}
                </td>

                <td>{% if person.occupation %}{{ person.occupation|join(', ') }}{% endif %}</td>

                <td>
                    {{ person.sex }}
                </td>

                <td>
                    {{ person.birthDate }}
                </td>

                <td>
                    {{ person.writtenBirthDate }}
                </td>

                <td>
                    {{ person.birthStatus }}
                </td>

                <td>
                    {{ person.status }}
                </td>

            </tr>
        {% endfor %}
    </tbody>
</table>
