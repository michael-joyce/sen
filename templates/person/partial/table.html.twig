<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Alias</th>
            <th>Sex</th>
            <th>Birth Date</th>
        </tr>
    </thead>
    <tbody>
        {% for person in people %}
            <tr>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person }}
                    </a>
                </td>
                <td>{% if person.alias %}{{ person.alias|join(', ') }}{% endif %}</td>
                <td>
                    {{ person.sex }}
                </td>
                <td>
                    {{ person.birthDate }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
