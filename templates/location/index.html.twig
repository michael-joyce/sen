{% extends 'base.html.twig' %}

{% block title %}Location List{% endblock %}

{% block pageheader %}
    <h1>Location List</h1>
    <p class="count">
        Displaying {{ locations|length }} locations of {{ locations.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('location_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
        </div>
    </div>

    {% embed 'location/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(locations) }}
    </div>

{% endblock %}
