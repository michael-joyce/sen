<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        {% for location in locations %}
            <tr>
                <td>
                    <a href="{{ path('location_show', { 'id': location.id }) }}">
                        {{ location.name }}
                    </a>
                </td>
                <td>
                    {{ location.category }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
