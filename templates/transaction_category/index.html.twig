{% extends 'base.html.twig' %}

{% block title %}Transaction Category List{% endblock %}

{% block pageheader %}
    <h1>Transaction Category List</h1>
    <p class="count">
        Displaying {{ transaction_categories|length }} transaction_categories
        of {{ transaction_categories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('transaction_category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('transaction_category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'transaction_category/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(transaction_categories) }}
    </div>

{% endblock %}
