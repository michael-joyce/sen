{% extends 'base.html.twig' %}

{% block title %}Event Category List{% endblock %}

{% block pageheader %}
    <h1>Event Category List</h1>
    <p class="count">
        Displaying {{ event_categories|length }} event categories of {{ event_categories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('event_category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('event_category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'event_category/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(event_categories) }}
    </div>

{% endblock %}
