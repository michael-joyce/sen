<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Category</th>
            <th>Participants</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        {% for event in events %}
            <tr>
                <td>
                    <a href="{{ path('event_show', { 'id': event.id }) }}">
                        {% if event.writtenDate %}{{ event.writtenDate }}{% else %}{{ event.date }}{% endif %}
                    </a>
                </td>
                <td>
                    {{ event.category }}
                </td>
                <td>
                    {% for person in event.participants %}
                        <a href='{{ path('person_show', {'id': person.id}) }}'>{{ person }}</a>{% if not loop.last %}; {% endif %}
                    {% endfor %}
                </td>
                <td>
                    {{ event.note }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
