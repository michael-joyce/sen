{% extends 'base.html.twig' %}

{% block title %}Ledger List{% endblock %}

{% block pageheader %}
    <h1>Ledger List</h1>
    <p class="count">
        Displaying {{ ledgers|length }} ledgers of {{ ledgers.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('ledger_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
        </div>
    </div>

    {% embed 'ledger/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(ledgers) }}
    </div>

{% endblock %}
