<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Volume</th>
            <th>Year</th>

        </tr>
    </thead>
    <tbody>
        {% for ledger in ledgers %}
            <tr>
                <td>
                    <a href="{{ path('ledger_show', { 'id': ledger.id }) }}">
                        {{ ledger.id }}
                    </a>
                </td>
                <td>
                    {{ ledger.volume }}
                </td>

                <td>
                    {{ ledger.year }}
                </td>

            </tr>
        {% endfor %}
    </tbody>
</table>
