<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Person</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        {% for residence in residences %}
            <tr>
                <td>
                    <a href="{{ path('residence_show', { 'id': residence.id }) }}">
                        {{ residence.date }}
                    </a>
                </td>
                <td>
                    {{ residence.person }}
                </td>
                <td>
                    {{ residence.city }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
