{% extends 'base.html.twig' %}

{% block title %}Witness List{% endblock %}

{% block pageheader %}
    <h1>Witness List</h1>
    <p class="count">
        Displaying {{ witnesses|length }} witnesses of {{ witnesses.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('witness_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
        </div>
    </div>

    {% embed 'witness/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(witnesses) }}
    </div>

{% endblock %}
