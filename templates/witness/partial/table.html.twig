<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Person</th>
            <th>Category</th>
            <th>Event</th>
        </tr>
    </thead>
    <tbody>
        {% for witness in witnesses %}
            <tr>
                <td>
                    <a href="{{ path('witness_show', { 'id': witness.id }) }}">
                        {{ witness.person }}
                    </a>
                </td>
                <td>
                    {{ witness.category }}
                </td>
                <td>
                    {{ witness.event }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
