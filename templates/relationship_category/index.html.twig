{% extends 'base.html.twig' %}

{% block title %}Relationship Category List{% endblock %}

{% block pageheader %}
    <h1>Relationship Category List</h1>
    <p class="count">
        Displaying {{ relationship_categories|length }} relationship_categories
        of {{ relationship_categories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('relationship_category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('relationship_category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'relationship_category/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(relationship_categories) }}
    </div>

{% endblock %}
