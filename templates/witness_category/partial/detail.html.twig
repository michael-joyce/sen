<table class='table table-bordered table-condensed table-hover table-striped'>
    <tbody>
        {% embed '@NinesUtil/term/partial/show.html.twig' with {'term': witness_category} %}
        {% endembed %}
    </tbody>
</table>

<h2>Witnesses</h2>
<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Event</th>
            <th>Person</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        {% for witness in witness_category.witnesses|sort((a,b)=>(a.event.date<=>b.event.date)) %}
            <tr>
                <td>
                    <a href="{{ path('event_show', { 'id': witness.event.id }) }}">
                        {{ witness.event.date }}
                    </a>
                </td>
                <td>
                    <a href='{{ path('event_category_show', {'id': witness.event.category.id}) }}'>
                        {{ witness.event.category }}
                    </a>
                </td>
                <td>
                    <a href='{{ path('person_show', {'id': witness.person.id}) }}'>
                        {{ witness.person }}
                    </a>
                </td>
                <td>
                    <a href='{{ path('witness_category_show', {'id': witness.category.id}) }}'>
                        {{ witness.category }}
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
