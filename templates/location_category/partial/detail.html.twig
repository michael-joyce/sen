<table class='table table-bordered table-condensed table-hover table-striped'>
    <tbody>
        <tr>
            <th>Name</th>
            <td>
                {{ location_category.name }}
            </td>
        </tr>
        <tr>
            <th>Label</th>
            <td>
                {{ location_category.label }}
            </td>
        </tr>
        <tr>
            <th>Description</th>
            <td>
                {{ location_category.description|raw }}
            </td>
        </tr>

        <tr>
            <th>Location</th>
            <td>
                {% if location_category.locations|length > 0 %}
                    <ul>
                        {% for location in location_category.locations %}
                            <li>
                                <a href='{{ path("location_show", {"id":location.id }) }}'>
                                    {{ location }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ location_category.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ location_category.updated|date }}</td>
        </tr>
    </tbody>
</table>


