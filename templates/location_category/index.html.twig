{% extends 'base.html.twig' %}

{% block title %}Location Category List{% endblock %}

{% block pageheader %}
    <h1>Location Category List</h1>
    <p class="count">
        Displaying {{ location_categories|length }} location categories of {{ location_categories.getTotalItemCount }}
        total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('location_category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('location_category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'location_category/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(location_categories) }}
    </div>

{% endblock %}
