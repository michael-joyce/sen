<table class='table table-bordered table-condensed table-hover table-striped'>
    <tbody>
        <tr>
            <th>Name</th>
            <td>
                {{ race.name }}
            </td>
        </tr>
        <tr>
            <th>Label</th>
            <td>
                {{ race.label }}
            </td>
        </tr>
        <tr>
            <th>Description</th>
            <td>
                {{ race.description|raw }}
            </td>
        </tr>
        <tr>
            <th>Spanish Ungendered</th>
            <td>
                {{ race.spanishUngendered }}
            </td>
        </tr>
        <tr>
            <th>Spanish Male</th>
            <td>
                {{ race.spanishMale }}
            </td>
        </tr>
        <tr>
            <th>Spanish Female</th>
            <td>
                {{ race.spanishFemale }}
            </td>
        </tr>
        <tr>
            <th>French Ungendered</th>
            <td>
                {{ race.frenchUngendered }}
            </td>
        </tr>
        <tr>
            <th>French Male</th>
            <td>
                {{ race.frenchMale }}
            </td>
        </tr>
        <tr>
            <th>French Female</th>
            <td>
                {{ race.frenchFemale }}
            </td>
        </tr>

        <tr>
            <th>Person</th>
            <td>
                {% if race.people|length > 0 %}
                    <ul>
                        {% for person in race.people %}
                            <li>
                                <a href='{{ path("person_show", {"id":person.id }) }}'>
                                    {{ person }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ race.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ race.updated|date }}</td>
        </tr>
    </tbody>
</table>


