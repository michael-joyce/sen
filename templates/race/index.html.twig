{% extends 'base.html.twig' %}

{% block title %}Race List{% endblock %}

{% block pageheader %}
    <h1>Race List</h1>
    <p class="count">
        Displaying {{ races|length }} races of {{ races.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('race_new') }}" class="btn btn-default"> <span class="glyphicon glyphicon-plus"></span>
                    New </a>
            {% endif %}

            <a href="{{ path('race_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'race/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(races) }}
    </div>

{% endblock %}
