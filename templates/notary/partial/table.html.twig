<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Ledgers</th>
        </tr>
    </thead>
    <tbody>
        {% for notary in notaries %}
            <tr>
                <td>
                    <a href="{{ path('notary_show', { 'id': notary.id }) }}">
                        {{ notary.name }}
                    </a>
                </td>
                <td>
                    {{ notary.ledgers|length }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
