{% extends 'base.html.twig' %}

{% block title %}Notary List{% endblock %}

{% block pageheader %}
    <h1>Notary List</h1>
    <p class="count">
        Displaying {{ notaries|length }} notaries of {{ notaries.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('notary_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
        </div>
    </div>

    {% embed 'notary/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(notaries) }}
    </div>

{% endblock %}
